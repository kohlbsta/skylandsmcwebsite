{
  "version": 2,
  "routes": [
    {
      "src": "/assets/(.*)",   // ✅ serve JS/CSS files normally
      "dest": "/assets/$1"
    },
    {
      "src": "/favicon.ico",   // ✅ serve favicon directly
      "dest": "/favicon.ico"
    },
    {
      "src": "/(.*)",          // ✅ all other routes → index.html
      "dest": "/index.html"
    }
  ]
}
